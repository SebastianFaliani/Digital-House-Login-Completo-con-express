<!DOCTYPE html>
<html lang="sp">

<%- include("../partials/head") %>

      <body>
            <%- include("../partials/header") %>

                  <form action="/users/login" method="POST" class="bg-info d-flex justify-content-center align-items-center vh-100">
                        <div class="form container-Login bg-white p-5 rounded-5 text-secondary ">

                              <div class="d-flex justify-content-center">
                                    <img src="/images/userLogin.png" alt="" class="avatar">
                              </div>

                              <h2 class="text-center fs-1 fw-bold">Login</h2>

                              <div class="input-container input-group mt-4">
                                    <div class="input-group-text bg-info">
                                          <img src="/images/user.png" alt="" class="iconos">
                                    </div>
                                    <input class="input-style form-control " type="email" name="email" placeholder="Ingrese su email"
                                          value="<%= locals.old && old.email ? old.email : null %>">

                              </div>

                              <div class="input-container input-group mt-1">
                                    <div class="input-group-text bg-info">
                                          <img src="/images/lock.png" alt="" class="iconos">
                                    </div>
                                    <input class="input-style form-control" type="password" name="password" placeholder="Ingrese su contraseña">
                              </div>
                              <p class="text-danger">
                                    <%= locals.errors && errors.password ? errors.password.msg : null %>
                              </p>

                              <div class="check d-flex justify-content-around mt-1">
                                    <div class="d-flex align-items-center gap-1">
                                          <input class="form-check-input" type="checkbox" name="remember" id="remember">
                                          <label class="pt-1" for="remember" style="font-size: 0.9rem">Recordarme</label>
                                    </div>
                                    <div class="pt-1">
                                          <a href="#" class="text-info fw-semibold fst-italic " style="font-size: 0.9rem">¿Olvidaste tu
                                                contraseña?</a>
                                    </div>
                              </div>

                              <div class="button-container input-group ">
                                    <button type="submit" class="btn btn-submit btn-info text-white w-100 mt-2">Ingresar</button>
                              </div>
                              <div>
                                    <p class="text-center mt-2"><a href="/users/registro" class="text-info fw-semibold">Aún no tengo
                                                cuenta</a>
                                    </p>
                              </div>
                        </div>
                  </form>



      </body>

</html>